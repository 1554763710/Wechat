<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Search</title>
</head>
<body>
    <button id="btn">点击录音</button>
    <ul id="list"></ul>
</body>
<script src="http://res2.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/zepto/1.0rc1/zepto.min.js"></script>
<script>
    $(function (){
        // appId, noncestr, url, timestamp, signature
        wx.config({
            debug: true, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: '<%= appId %>', // 必填，公众号的唯一标识
            timestamp:'<%= timestamp %>' , // 必填，生成签名的时间戳
            nonceStr: '<%= noncestr %>', // 必填，生成签名的随机串
            signature: '<%= signature %>',// 必填，签名
            jsApiList: [
            'updateAppMessageShareData',
            'updateTimelineShareData',
            'startRecord',
            'stopRecord',
            'translateVoice'
            ] // 必填，需要使用的JS接口列表
        });
        wx.ready(function(){
            console.log(1111)
        });
        let isRecord = false;
        $("#btn").tap(function (){
            if(isRecord){
                wx.stopRecord({
                    success: function (res) {
                        var localId = res.localId;
                        wx.translateVoice({
                            localId: localId, // 需要识别的音频的本地Id，由录音相关接口获得
                            isShowProgressTips: 1, // 默认为1，显示进度提示
                            success: function (res) {
                                $.getJSON(`https://api.douban.com/v2/movie/search?count=8&q=${res.translateResult}&callback=?`, function (data){
                                    const { subjects } = data;
                                    const html = subjects.reduce( function (prev, curr){
                                        return `<li>
                                            <img src="${curr.images.small}"> <br>
                                            <a href="${curr.alt}">${curr.title}</a>
                                            <p>豆瓣评分:${curr.rating.average}</p>
                                            </li>` + prev;
                                    },"")
                                    wx.updateAppMessageShareData({ 
                                        title: `${subjects[0].title}`, // 分享标题
                                        desc: `豆瓣评分:${subjects[0].rating.average}`, // 分享描述
                                        link: `<%= url %>/search`, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
                                        imgUrl: `<%= url %>/1.jpg`, // 分享图标
                                        success: function () {
                                            alert("分享成功");
                                        },
                                        fail: function(err){
                                            alert("分享失败");
                                            alert(err);
                                        }
                                    })
                                    wx.updateTimelineShareData({ 
                                        title: `${subjects[0].title}`, // 分享标题
                                        desc: `豆瓣评分:${subjects[0].rating.average}`, // 分享描述
                                        link: `<%= url %>/search`, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
                                        imgUrl: `<%= url %>/1.jpg`, // 分享图标
                                        success: function () {
                                            alert("分享成功");
                                        },
                                        fail: function(err){
                                            alert("分享失败");
                                            alert(err);
                                        }
                                    })
                                    $("#list").html(html);
                                })

                            }
                        });
                        isRecord = false
                    }
                });
            }else{
                // 开始录音
                wx.startRecord();
                isRecord = true;
            }
        })
    })
</script>
</html>